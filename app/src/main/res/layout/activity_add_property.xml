<?xml version="1.0" encoding="utf-8"?>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fyp.hp.realestate.AddProperty"
    android:background="@drawable/plain"
    tools:ignore="ExtraText">
    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        tools:ignore="ScrollViewSize">

        <EditText
            android:id="@+id/etPropName"
            android:textAppearance="?android:textAppearanceLarge"
            android:textAlignment="center"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Enter Property Name"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/btnSelectImage"
            android:layout_alignLeft="@+id/etAmountProperty"
            android:layout_alignStart="@+id/etAmountProperty" />

        <EditText
            android:id="@+id/etPropDes"
            android:textAppearance="?android:textAppearanceLarge"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etPropName"
            android:layout_alignRight="@+id/etPropName"
            android:layout_below="@+id/etPropName"
            android:ems="10"
            android:hint="Enter Property Descriprion"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etPropArea"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/etPropDes"
            android:layout_alignStart="@+id/etPropDes"
            android:layout_below="@+id/etPropDes"
            android:ems="10"
            android:hint="Enter Property Area (Sq. Yards)"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnAddProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            tools:ignore="HardcodedText"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView12" />


        <EditText
            android:id="@+id/etAmountProperty"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etPropArea"
            android:ems="10"
            android:hint="Enter Amount"
            android:inputType="number"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etClientName"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etAmountProperty"
            android:ems="10"
            android:hint="Enter Client Name"
            android:inputType="text"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spfeature"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Features"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:paddingLeft="30dip"
            android:layout_below="@+id/textView18"
            android:layout_toRightOf="@+id/spAgent"
            android:layout_toEndOf="@+id/spAgent" />
        <Spinner
            android:id="@+id/spPurpose"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:paddingLeft="30dip"
            android:layout_height="wrap_content"
            android:text="For Purpose"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/spPropertyType"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Property Type"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:paddingLeft="30dip"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/spSubType"
            android:layout_width="150dp"
            android:paddingBottom="33dip"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Property Sub Type"
            android:paddingLeft="30dip"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp" />
        <Spinner
            android:id="@+id/spArea"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:layout_marginTop="6dp"
            android:text="Choose Area"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />
        <Spinner
            android:id="@+id/spSubArea"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dip"
            android:layout_marginTop="6dp"
            android:text="Choose Sub Area"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />
        <Spinner
            android:id="@+id/spAgent"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Agent if any"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:paddingLeft="30dip"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/spEstate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView11"
            android:paddingLeft="30dip"
            android:layout_marginTop="6dp"
            android:text="Choose RealEstate if any"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <EditText
            android:id="@+id/etCell"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etClientName"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Enter Contact Number"
            android:inputType="number"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_insert_photo_black_18dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView12"
            android:layout_alignEnd="@+id/textView12" />
        <ImageView
            android:id="@+id/imageViewForSelection"
            android:layout_width="70dp"
            android:layout_height="80dp"
            tools:ignore="ContentDescription"
            android:layout_alignTop="@+id/btnSelectImage"
            android:layout_toRightOf="@+id/btnSelectImage"
            android:layout_toEndOf="@+id/btnSelectImage" />

        <!--<Button-->
        <!--android:id="@+id/btnDltProperty"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Remove Property"-->
        <!--tools:ignore="HardcodedText"-->
        <!--android:layout_marginLeft="31dp"-->
        <!--android:layout_marginStart="31dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_toRightOf="@+id/btnSelection"-->
        <!--android:layout_toEndOf="@+id/btnSelection"-->
        <!--android:layout_marginBottom="14dp" />-->

        <Button
            android:id="@+id/btnSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Sell with Agent"
            android:layout_alignTop="@+id/textView10"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etCell"
            android:layout_alignStart="@+id/etCell"
            android:layout_below="@+id/etCell"
            android:ems="10"
            android:hint='Enter your location like "location karachi"'
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceLarge"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnSearchLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search My Location"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_below="@+id/etLocation"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/Latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSearchLocation"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/spAgent"
            android:layout_toRightOf="@+id/spAgent"
            android:text="Latitude"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:layout_below="@+id/Latitude"
            android:layout_alignLeft="@+id/Latitude"
            android:layout_alignStart="@+id/Latitude"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Latitude"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/Latitude"
            android:layout_alignLeft="@+id/btnSelection"
            android:layout_alignStart="@+id/btnSelection" />

        <TextView
            android:id="@+id/txtLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBaseline="@+id/textView18"
            android:layout_alignBottom="@+id/textView18"
            android:layout_alignLeft="@+id/txtLat"
            android:layout_alignStart="@+id/txtLat" />




    </RelativeLayout>

</ScrollView>
