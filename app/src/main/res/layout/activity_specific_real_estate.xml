<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fyp.hp.realestate.SpecificRealEstate"
    android:background="@drawable/plain"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:maxHeight="5px"
        android:maxWidth="3px"
        app:srcCompat="@drawable/realestate"
        tools:ignore="ContentDescription,ObsoleteLayoutParam,PxUsage"
        android:layout_alignParentTop="true"
        android:background="@drawable/realestatebackground"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:id="@+id/spSelectArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtAgents"
        android:layout_centerHorizontal="true" />


    <Spinner
        android:id="@+id/spSelectSubArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAddClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:ignore="HardcodedText"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/spSelectSubArea"
        android:layout_centerHorizontal="true" />
    android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtAgents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:text="Select your Area"
        android:textAlignment="center"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/imageView" />

    <TextView
        android:id="@+id/txt"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Town"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/spSelectArea"
        android:layout_alignLeft="@+id/spSelectArea"
        android:layout_alignStart="@+id/spSelectArea"
        android:layout_marginTop="23dp" />


</RelativeLayout>
