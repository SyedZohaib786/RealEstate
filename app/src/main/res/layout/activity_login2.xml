<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.fyp.hp.realestate.Login"
    android:background="@drawable/plain"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:srcCompat="@drawable/realestate"
        android:id="@+id/imageView2"
        android:maxHeight="5px"
        android:maxWidth="3px"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription,ObsoleteLayoutParam,PxUsage"
        android:layout_alignParentTop="true"
        android:background="@drawable/realestatebackground"
        android:layout_above="@+id/etUserName" />

    <Button
        android:text="Exit"
        android:layout_width="match_parent"
        android:fontFamily="cursive"
        android:layout_height="wrap_content"
        android:id="@+id/buttonexit"
        style="@style/Widget.AppCompat.Button.Borderless"
        tools:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnusedAttribute"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:paddingTop="3px"
        android:paddingBottom="3px"/>

    <TextView
        android:text="Not Registered?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:id="@+id/txtnotregister"
        android:textAlignment="center"
        tools:ignore="HardcodedText"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        tools:targetApi="jelly_bean"
        android:layout_above="@+id/btnsignup"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter User Name"
        android:fontFamily="cursive"
        android:ems="10"
        android:id="@+id/etUserName"
        android:textAlignment="center"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnusedAttribute"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:fontFamily="cursive"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:ems="10"
        android:id="@+id/etPassword"
        android:textAlignment="center"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnusedAttribute"
        android:layout_below="@+id/etUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnlogn"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/agentRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agent"
            android:checked="true"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/userRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:fontFamily="cursive"
        android:layout_height="wrap_content"
        android:id="@+id/btnsignup"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        tools:textStyle="bold|italic"
        android:layout_weight="0.01"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="HardcodedText,InefficientWeight,ObsoleteLayoutParam"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:targetApi="jelly_bean"
        android:layout_above="@+id/buttonexit"
        android:layout_centerHorizontal="true" />

    <Button
        android:fontFamily="cursive"
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnlogn"
        style="@android:style/Widget.ActionButton.Overflow"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnusedAttribute"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/etUserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
